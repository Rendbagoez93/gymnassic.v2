# Production Environment Configuration
# Copy this file to .env.production and customize with secure values

# Flask Configuration
FLASK_ENV=production
DEBUG=false

# Application
APP_NAME=Gymnassic
APP_VERSION=2.0.0

# Database (PostgreSQL for production)
DATABASE_URL=postgresql://your-db-user:your-db-password@localhost:5432/gymnassic_db

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30
DB_CONNECT_TIMEOUT=10

# Security (REQUIRED - Generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-production-secret-key-here-change-this

# Session Security (HTTPS required in production)
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict
PREFERRED_URL_SCHEME=https

# Email (Production SMTP)
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-mail-password-here
MAIL_DEFAULT_SENDER=noreply@example.com
MAIL_SUPPRESS_SEND=false

# Logging
LOG_LEVEL=WARNING

# Features
FEATURE_ONLINE_PAYMENT=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false

# Rate Limiting (Redis for production)
RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URL=redis://localhost:6379/0

# Timezone
TIMEZONE=UTC
