# ========================================
# Production Environment Configuration
# ========================================
# IMPORTANT: Update all values before deploying to production!

# Flask Environment
FLASK_ENV=production
FLASK_APP=run.py

# ========================================
# Security (CRITICAL - MUST UPDATE!)
# ========================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_IN_PRODUCTION

# Session Security (HTTPS required)
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# CSRF Protection
WTF_CSRF_ENABLED=true

# Rate Limiting (Production)
RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URL=redis://localhost:6379/0
RATELIMIT_DEFAULT=100 per day, 20 per hour
RATELIMIT_LOGIN_ATTEMPTS=5 per 15 minutes

# ========================================
# Database: PostgreSQL (Production)
# ========================================
# Format: postgresql://username:password@host:port/database
# Example: postgresql://gymnassic_user:secure_password@localhost:5432/gymnassic_db
DATABASE_URL=postgresql://username:password@localhost:5432/gymnassic_production

# PostgreSQL Engine Options (Default values - Adjustable)
# Connection Pool
DB_POOL_SIZE=10              # Number of connections in pool
DB_MAX_OVERFLOW=20           # Additional connections beyond pool_size
DB_POOL_RECYCLE=3600         # Recycle connections after 1 hour
DB_POOL_TIMEOUT=30           # Wait time for connection from pool
DB_POOL_PRE_PING=true        # Test connections before use

# PostgreSQL Connection Settings
DB_CONNECT_TIMEOUT=10        # Connection timeout in seconds
DB_APP_NAME=gymnassic        # Application name for monitoring

# SQLAlchemy Settings
SQLALCHEMY_TRACK_MODIFICATIONS=false
SQLALCHEMY_ECHO=false

# ========================================
# Email Configuration (Production SMTP)
# ========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-production-email@domain.com
MAIL_PASSWORD=your-secure-app-password
MAIL_DEFAULT_SENDER=noreply@gymnassic.com
MAIL_SUPPRESS_SEND=false

# ========================================
# Application Settings
# ========================================
MAX_CONTENT_LENGTH=16777216
ITEMS_PER_PAGE=20
TIMEZONE=UTC

# Membership Settings
MEMBERSHIP_GRACE_PERIOD_DAYS=3
PAYMENT_DUE_REMINDER_DAYS=7

# ========================================
# Feature Flags (Production)
# ========================================
FEATURE_ONLINE_PAYMENT=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false

# ========================================
# Logging
# ========================================
LOG_LEVEL=WARNING
