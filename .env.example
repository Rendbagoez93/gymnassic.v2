# ========================================
# Gymnassic v2 - Environment Configuration
# ========================================
# Copy this file to .env.development or .env.production and update values

# ========================================
# Flask Environment
# ========================================
FLASK_ENV=development  # development, production, testing
FLASK_APP=run.py

# ========================================
# Security Settings
# ========================================
# CRITICAL: Generate a strong secret key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Session Configuration
SESSION_COOKIE_SECURE=false  # Set to true in production (requires HTTPS)
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600  # seconds (1 hour)

# CSRF Protection
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting
RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=200 per day, 50 per hour
RATELIMIT_LOGIN_ATTEMPTS=5 per 15 minutes

# ========================================
# Database Configuration
# ========================================
# Development (SQLite)
DATABASE_URL=sqlite:///instance/gymnassic.db

# Production (PostgreSQL) - Uncomment and configure for production
# DATABASE_URL=postgresql://your-db-user:your-db-password@localhost:5432/gymnassic_db

# Database Pool Settings
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true
DB_MAX_OVERFLOW=20
SQLALCHEMY_TRACK_MODIFICATIONS=false
SQLALCHEMY_ECHO=false  # Set to true to see SQL queries

# ========================================
# Email Configuration
# ========================================
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-mail-password-here
MAIL_DEFAULT_SENDER=noreply@example.com
MAIL_SUPPRESS_SEND=true  # Set to false in production

# ========================================
# Application Settings
# ========================================
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
ITEMS_PER_PAGE=20
TIMEZONE=UTC

# Membership Settings
MEMBERSHIP_GRACE_PERIOD_DAYS=3
PAYMENT_DUE_REMINDER_DAYS=7

# ========================================
# Feature Flags
# ========================================
FEATURE_ONLINE_PAYMENT=false
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false

# ========================================
# Logging
# ========================================
LOG_LEVEL=DEBUG  # DEBUG, INFO, WARNING, ERROR, CRITICAL
