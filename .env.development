# ========================================
# Development Environment Configuration
# ========================================

# Flask Environment
FLASK_ENV=development
FLASK_APP=run.py

# Security (Development)
SECRET_KEY=dev-secret-key-not-for-production-use
SESSION_COOKIE_SECURE=false
WTF_CSRF_ENABLED=true

# ========================================
# Database: SQLite3 (Local Development)
# ========================================
# SQLite3 is file-based, no server required
DATABASE_URL=sqlite:///instance/gymnassic.db
SQLALCHEMY_ECHO=true
SQLALCHEMY_TRACK_MODIFICATIONS=false

# SQLite Engine Options (using defaults from SQLiteDatabaseConfig)
# DB_POOL_PRE_PING=true (default, can be changed)

# Email (Suppress sending in development)
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_SUPPRESS_SEND=true
MAIL_DEFAULT_SENDER=dev@gymnassic.local

# Logging
LOG_LEVEL=DEBUG

# Feature Flags (Development)
FEATURE_ONLINE_PAYMENT=false
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false

# Application Settings
ITEMS_PER_PAGE=20
MEMBERSHIP_GRACE_PERIOD_DAYS=3
PAYMENT_DUE_REMINDER_DAYS=7
